{
    "background": {
        "page": "src/html/Main.html",
        "persistent": true
    },
    "browser_action": {
        "default_icon": "src/images/office365_not_logged_in.png"
    },
    "default_locale": "en",
    "description": "__MSG_office365check_description__",
    "icons": {
        "128": "src/images/office365_128.png"
